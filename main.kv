MDBoxLayout:
    orientation:'vertical'

    
    MDToolbar:
        type: 'top'
        title: 'myNurse'
        right_action_items: [["menu", lambda x: x]]

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "home"
            icon: "home"
            MDBoxLayout:
                padding: 10
                MDLabel:
                    text: "ekran główny gdzie będziemy trzymać nie wiadomo jeszcze co"
                    halign: "center"
                
        
        MDBottomNavigationItem:
            name: "pill"
            icon: "pill"
            MDBoxLayout:
                orientation: "vertical"
                padding: 20
                spacing: 5
                MDLabel:
                    text: "lek 1"
                    halign: "center"
                MDProgressBar:
                    value: 23
                MDLabel:
                    text: "lek 2"
                    halign: "center"
                MDProgressBar:
                    value: 72
                MDLabel:
                    text: "lek 3"
                    halign: "center"
                MDProgressBar:
                    value: 12


        
        MDBottomNavigationItem:
            name: "doctor"
            icon: "doctor"
            MDBoxLayout:
                padding: 10
                MDTextField:
                    halign: "center"
                    hint_text: "Szukaj specjalisty"
                    helper_text: "np. Kardiolog"
                    helper_text_mode: "on_focus" 
            
        MDBottomNavigationItem:
            name: "book"
            icon: "book-open-page-variant"
            MDBoxLayout:
                padding: 10
                spacing: 0
                MDTextField:
                    halign: "center"
                    hint_text: "Wyszukaj lek"
                    helper_text: "Nazwa leku"
                    helper_text_mode: "on_focus"