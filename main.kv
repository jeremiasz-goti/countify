MDBoxLayout:
    orientation:'vertical'
    padding: 0
    
    MDToolbar:
        type: 'top'
        title: 'myNurse'
        right_action_items: [["menu", lambda x: x]]

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "home"
            icon: "home"
            
            MDBoxLayout:
                orientation: "vertical"
                spacing: 10
                padding: "1dp"
                MDCard:
                    orientation: "vertical"
                    padding: "1dp"
                    size_hint: None, None
                    size: "280dp", "100dp"
                    pos_hint: {"center_x": .5, "center_y": .8}
                    MDLabel:
                        text: "Hello World"
                        halign: "center"
                MDCard:
                    orientation: "vertical"
                    padding: "1dp"
                    size_hint: None, None
                    size: "280dp", "100dp"
                    pos_hint: {"center_x": .5, "center_y": .8}

                    MDLabel:
                        text: "Status leków: "
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]

                    MDSeparator:
                        height: "1dp"
                    OneLineAvatarListItem:
                        text: "Wszystko w normie!"

                        IconLeftWidget:
                            icon: "check"
                MDCard:
                    orientation: "vertical"
                    padding: "1dp"
                    size_hint: None, None
                    size: "280dp", "100dp"
                    pos_hint: {"center_x": .5, "center_y": .25}

                    MDLabel:
                        text: "Następna dawka leków za: "
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]

                    MDSeparator:
                        height: "1dp"
                    OneLineAvatarListItem:
                        text: "12 min"

                        IconLeftWidget:
                            icon: "timelapse"
                
                MDCard:
                    orientation: "vertical"
                    padding: "1dp"
                    size_hint: None, None
                    size: "280dp", "100dp"
                    pos_hint: {"center_x": .5, "center_y": .1}

                    MDLabel:
                        text: "Powiadomienia "
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]

                    MDSeparator:
                        height: "1dp"
                    OneLineAvatarListItem:
                        text: "Masz 0 powiadomień"

                        IconLeftWidget:
                            icon: "thumb-up-outline"

        MDBottomNavigationItem:
            name: "pill"
            icon: "pill"
            MDBoxLayout:
                orientation: "vertical"
                padding: 20
                spacing: 5

                MDLabel:
                    text: "Poziom leków"
                    halign: "center"

                MDLabel:
                    text: "lek 1"
                    halign: "center"
                MDProgressBar:
                    value: 23

                MDLabel:
                    text: "lek 2"
                    halign: "center"
                MDProgressBar:
                    value: 72

                MDLabel:
                    text: "lek 3"
                    halign: "center"
                MDProgressBar:
                    value: 12
                MDLabel:
                    text: "lek 4"
                    halign: "center"
                MDProgressBar:
                    value: 59
            



        
        MDBottomNavigationItem:
            name: "doctor"
            icon: "doctor"
            MDBoxLayout:
                padding: 10
                MDTextField:
                    halign: "center"
                    hint_text: "Szukaj specjalisty"
                    helper_text: "np. Kardiolog"
                    helper_text_mode: "on_focus" 
            
        MDBottomNavigationItem:
            name: "book"
            icon: "book-open-page-variant"
            MDBoxLayout:
                padding: 10
                spacing: 0
                MDTextField:
                    halign: "center"
                    hint_text: "Wyszukaj lek"
                    helper_text: "Nazwa leku"
                    helper_text_mode: "on_focus"