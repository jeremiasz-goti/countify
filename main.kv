MDBoxLayout:
    orientation:'vertical'

    
    MDToolbar:
        type: 'top'
        title: 'myNurse'
        right_action_items: [["menu", lambda x: x]]

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "home"
            icon: "home"
            MDBoxLayout:
                padding: 10
                MDLabel:
                    text: "ekran główny gdzie będziemy trzymać nie wiadomo jeszcze co"
                    halign: "center"
        
        MDBottomNavigationItem:
            name: "pill"
            icon: "pill"
            MDBoxLayout:
                padding: 10
                spacing: 5
                
                MDLabel:
                    text: "lek 1"
                MDProgressBar:
                    value: 50


        
        MDBottomNavigationItem:
            name: "doctor"
            icon: "doctor"
            MDBoxLayout:
                padding: 10
                MDLabel:
                    text: "pole szukania + automatyczna lokalizacja do szukania specjalisty"
                    halign: "center"   
            
        MDBottomNavigationItem:
            name: "book"
            icon: "book-open-page-variant"
            MDBoxLayout:
                padding: 10    
                MDLabel:
                    text: "encyklopedia lekow - u gory pole szukania a ponizej przewijana lista lekow"  
                    halign: "center"